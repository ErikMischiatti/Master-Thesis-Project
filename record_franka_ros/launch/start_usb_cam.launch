<?xml version="1.0" ?>
<launch>
  <!-- Input argument for video device -->
  <arg name="video_device" default="video0"/>

  <!-- Start USB Camera with specified name and device -->
  <node name="$(arg video_device)" pkg="usb_cam" type="usb_cam_node" output="screen">
    <param name="video_device" value="/dev/$(arg video_device)"/>
    <param name="image_width" value="640"/>
    <param name="image_height" value="480"/>
    <param name="framerate" value="30"/>
    <param name="pixel_format" value="mjpeg"/>
    <param name="camera_frame_id" value="usb_cam"/>
  </node>

  <!-- Start camera configuration script -->
  <node name="setup_usb_cam" pkg="record_franka_ros" type="setup_usb_cam.sh" output="screen" args="/dev/$(arg video_device)">
    <param name="video_device" value="/dev/$(arg video_device)"/>
  </node>
</launch>
